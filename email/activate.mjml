<mjml>
  <mj-head>
    <mj-title>Time is Running Out - Activate Your Referral Code!</mj-title>
    <mj-preview>You have bonus points waiting! Help us reach our goal in just 2 days.</mj-preview>
    <mj-attributes>
      <mj-all font-family="Arial, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#333333" />
      <mj-section background-color="#ffffff" />
    </mj-attributes>
    <mj-style>
      /* Network Infographic Styles */
      .network-infographic {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        border-radius: 12px;
        padding: 25px 15px;
        margin: 25px 0;
        color: white;
        text-align: center;
        font-family: Arial, sans-serif;
      }
      
      .network-visual {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin: 20px 0;
      }
      
      .network-row {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
      }
      
      .person-circle {
        width: 40px;
        height: 40px;
        background: #00ff00;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: #1a1a1a;
        font-weight: bold;
      }
      
      .connector-line {
        width: 2px;
        height: 15px;
        background: #00ff00;
      }
      
      .row-label {
        color: #00ff00;
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 10px;
      }
      
      .urgency-highlight {
        background: #ff6b6b;
        color: white;
        padding: 2px 8px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: bold;
        display: inline-block;
      }
      
      .benefit-checkmark {
        color: #00ff00;
        font-weight: bold;
        margin-right: 8px;
      }
      
      .timer-box {
        background-color: #ff6b6b;
        color: white;
        width: 80px;
        height: 80px;
        display: inline-block;
        text-align: center;
        line-height: 80px;
        font-size: 32px;
        font-weight: bold;
        border-radius: 8px;
        margin: 0 5px;
      }
      
      /* Mobile adjustments */
      @media screen and (max-width: 600px) {
        .person-circle {
          width: 32px !important;
          height: 32px !important;
          font-size: 14px !important;
        }
        
        .network-row {
          gap: 8px !important;
        }
        
        .timer-box {
          width: 60px !important;
          height: 60px !important;
          font-size: 20px !important;
          line-height: 60px !important;
        }
        
        .network-infographic {
          padding: 20px 10px !important;
          margin: 20px 0 !important;
        }
      }
      
      @media screen and (max-width: 480px) {
        .person-circle {
          width: 28px !important;
          height: 28px !important;
          font-size: 12px !important;
        }
        
        .network-row {
          gap: 6px !important;
        }
        
        .timer-box {
          width: 50px !important;
          height: 50px !important;
          font-size: 18px !important;
          line-height: 50px !important;
        }
      }
    </mj-style>
  </mj-head>
  
